[Unit]
Description=MCPFusion
After=network.target
Wants=network.target

[Service]
Type=simple
User=mcpfusion
Group=mcpfusion
WorkingDirectory=/opt/mcpfusion
ExecStart=/opt/mcpfusion/mcpfusion
Restart=always
RestartSec=5

# Environment variables
Environment=DATA_DIR=/opt/mcpfusion/

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/home/mcpfusion/.mcpfusion
ReadWritePaths=/opt/mcpfusion

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=mcpfusion

# Resource limits
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
